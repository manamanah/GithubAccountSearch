<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/OnPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimarySurface">@color/surfaceColor</item>
        <item name="colorOnPrimarySurface">@color/OnSurfaceColor</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/OnSecondaryColor</item>

        <item name="colorOnBackground">@color/OnBackgroundColor</item>

        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorOnSurface">@color/OnSurfaceColor</item>

        <item name="colorError">@color/errorColor</item>
        <item name="colorOnError">@color/OnErrorColor</item>
    </style>

    <style name="input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
        <item name="android:layout_marginStart">@dimen/spacing_double</item>
        <item name="android:layout_marginEnd">@dimen/spacing_double</item>
    </style>

</resources>
